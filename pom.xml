<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>wfg_ltv_econ</groupId>
  <artifactId>LTV_Economy</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>LTV Economy</name>

  <build>
    <finalName>ltv_economy</finalName>
    <directory>jars/main/</directory>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>17</source>
          <target>17</target>
          <excludes>
              <exclude>com/**</exclude>
              <exclude>com_core/**</exclude>
          </excludes>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>cleanup-target</id>
            <phase>package</phase>
            <goals><goal>run</goal></goals>
            <configuration>
              <target>
                <delete dir="${project.build.directory}/classes"/>
                <delete dir="${project.build.directory}/test-classes"/>
                <delete dir="${project.build.directory}/maven-archiver"/>
                <delete dir="${project.build.directory}/maven-status"/>
                <delete dir="${project.build.directory}/antrun"/>
                <delete dir="${project.build.directory}/generated-sources"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>local</groupId>
      <artifactId>lwjgl</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/lwjgl.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>starfarer.api</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/starfarer.api.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.9</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/log4j-1.2.9.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>lwjgl_util</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/lwjgl_util.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>json</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/json.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>fs.common_obf</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/fs.common_obf.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>starfarer_obf</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../../starsector-core/starfarer_obf.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>reflection</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/jars/libs/reflection.jar</systemPath>
    </dependency>
  </dependencies>

</project>